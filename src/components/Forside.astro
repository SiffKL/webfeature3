<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.from(".underskrift", {
    opacity: 0,
    duration: 8,
    ease: "power2.inOut",
    scrollTrigger: {
      trigger: ".underskrift",
      start: "top 80%",
    },
  });

  gsap.from(".overskrift", {
    y: -500, // Negativ værdi for at flytte overskriften opad
    opacity: 0,
    duration: 2,
    // stagger: 0.8,
    delay: 0.5,
    ease: "power2.out",
    scrollTrigger: {
      trigger: ".overskrift",
      start: "top 80%",
      toggleActions: "play none none none",
    },
  });

  // Animation for overskrift1 (skal køre hurtigere med en forsinkelse)
  gsap.from(".overskrift1", {
    y: -600, // Negativ værdi for at flytte overskriften opad
    opacity: 0,
    duration: 2, // Hurtigere varighed
    ease: "power2.out",
    scrollTrigger: {
      trigger: ".overskrift1",
      start: "top 80%",
      toggleActions: "play none none none",
      // Tilføj en forsinkelse, så overskrift1 starter tidligere
    },
  });
</script>
