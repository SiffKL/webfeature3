---
import "../styles/global.css";

import "../styles/reset.css";
---

<main>
  <section class="video">
    <video id="video" autoplay muted loop>
      <source src="/eksperi-video.mp4" type="video/mp4" />
    </video>
  </section>

  <section class="citat">
    <div class="text-overlay">
      <p class="videocitat">"Det interessante ligger i fejlen. Et foto med masser af fejl er interessant. Jeg eksperimenterer med udstyr og teknik, og skaber nye visuelle udtryk. Det uperfekte er perfekt"</p>
    </div>
  </section>

  <style>
    /* .citat_animation {
      animation: slide-in-blurred-bottom 5s cubic-bezier(0.23, 1, 0.32, 1) both;
    } */

    .text-overlay {
      
      position: relative;
     
      text-align: center;

      max-width: 100vw;

      overflow-x: hidden;

      /* z-index: 1; */
      max-width: 600px;
      top: 300px;
      /* top: 800px; */
    }

    .citat {
      display: flex;
      justify-content:center;
    }


    #video {
      position: absolute;

      width: 100vw;

      height: 100vh;

      object-fit: cover;

      z-index: 0;
    }
  </style>

  <script>
    import { gsap } from "gsap";

    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    gsap.to(".citat", {
      // opacity: 0;
      scrollTrigger: {
        trigger: ".citat",
        markers: true,
        scrub: true,

        start: "start center",
      },
    });

    gsap.from(".video", {
      trigger: ".video",
      markers: true,
      scrub: true,
      start: "start end",
    });

    // gsap.from(".citat", {

    //   scrollTrigger: {

    //     trigger: ".citat",
    //     markers: true,
    //     srub: true,
    //     start: "start center"

    //   },

    //   scale: 2,
    // });

    //     gsap.from(".camerabox", {

    // scrollTrigger: {

    //   trigger: ".camerabox",
    //   markers: true,
    //   start: "start center",
    //   toggleActions: "play none none reverse",
    //   toggleClass:"flickerbox",

    // },

    // });
  </script>
</main>
