---

import "../styles/global.css";

import "../styles/reset.css";

---

 

<main>

  <section class="video">

  <video id="video" autoplay muted loop>

    <source src="/eksperi-video.mp4" type="video/mp4" />

  </video>
</section>
  
<section class="citat_animation">
  <div class="text-overlay">

  <p class="videocitat">"Det interessante ligger i fejlen. Et foto med masser af fejl er interessant. Jeg eksperimenterer med udstyr og teknik, og skaber nye visuelle udtryk. Det uperfekte er perfekt"</p>

</section>
</main>



<style>

  .citat_animation{
	        animation: slide-in-blurred-bottom 5s cubic-bezier(0.230, 1.000, 0.320, 1.000) both;
}



.text-overlay {

  position: absolute;

    text-align: center;

    max-width: 100vw;

    overflow-x: hidden;

    z-index: 1;

  }

 

.videocitat{

    padding-left: 10%;

    padding-right: 10%;

  }

  #video {

    width: 100vw;

    height: 100vh;

    object-fit: cover;

    z-index: 0;

  }

 

</style>

 <script>

  import { gsap } from "gsap";

  import { ScrollTrigger } from "gsap/ScrollTrigger";

 

  gsap.registerPlugin(ScrollTrigger);

 

  gsap.from(".citat_animation", {

    scrollTrigger: {

      trigger: ".citat_animation",
      markers: true,
      srub: true,
      start: "start center"

    },

    scale: 2,
 

  });


  
